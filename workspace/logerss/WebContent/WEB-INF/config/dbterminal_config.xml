<?xml version="1.0" encoding="UTF-8" ?>
<sqlmap>
	<select id="select_notice" >
		SELECT * FROM LO_NOTICE
	</select>
	
	<select id="select_user" >
		SELECT * FROM LO_USER_INFO
	</select>
	
	<select id="select_user_find" >
		SELECT A.NAME, A.EMAIL, A.PASSWORD, A.ROLE_BASE_SEQ, B.ROLE_SEQ, B.ROLE_NAME 
		FROM LO_USER_INFO A, LO_ROLE_INFO B WHERE  A.EMAIL = #email# AND A.PASSWORD = #password#
		AND A.ROLE_BASE_SEQ = B.ROLE_SEQ
	</select>
	
	
	<insert id="insert_user" >
		INSERT INTO LO_USER_INFO (NAME,EMAIL,PASSWORD,ROLE_BASE_SEQ)
		VALUES (#name#,#email#,#password#,'1')
	</insert>
	 
	<delete id="cool_delete" >
		delete from insert_test where seq=#seq#
	</delete>
	
	
	<select id="gg">
	select * from example;
	</select>
	<select id="gogo">
	select * from example where id=#id#;
	</select>
	
	<update id="gogoup">
	update example set data=CONCAT(data,'--') where id=#id#;
	</update>
	
</sqlmap>













