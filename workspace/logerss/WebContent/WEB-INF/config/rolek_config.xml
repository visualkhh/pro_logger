<?xml version="1.0" encoding="UTF-8"?>
<roles>

<!-- 
default id를 가진것이  인증없이 그냥 들리는 손님용입니다  무조건있어야합니다
join엘리먼트의 
type = new : 상속을 받지 않고 재정의합니다.
type = 없음  : 부모거 상속 한뒤 자신거와 merge합니다.
type = delet  :  상속을 받더라도 지웁니다. 또 자신에 포함하지 않습니다. 
 --> 

	<role id="default">
		<join url="/view">
			<fnc id="R" value="true"/>
			<fnc id="IS_LOGIN" value="false"/>
		</join>
		<join url="/view/signin">
			<fnc id="R" value="true"/>
			<fnc id="IS_LOGIN" value="false"/>
		</join>
		<join url="/view/signup">
			<fnc id="R" value="true"/>
			<fnc id="IS_LOGIN" value="false"/>
		</join>
		<join url="/ajax/sign">
			<fnc id="SIGNUP" value="true"/>
			<fnc id="SIGNIN" value="true"/>
			<fnc id="IS_LOGIN" value="false"/>
		</join>
		<join url="/ajax/info">
			<fnc id="R" value="true"/>
			<fnc id="IS_LOGIN" value="false"/>
		</join>
	</role>
	
	<role id="normal" extends="default">
		<join url="/view">
			<fnc id="IS_LOGIN" value="true"/>
		</join>
		<join url="/user.*"  redirect_after_url="/user(.+).*" redirect="/WEB-INF/users/${ROLEK.session.USER_EMAIL}" type="new">
			<fnc id="R" value="true"/>
		</join>
		<join url="/view/log.*" type="new">
			<fnc id="R" value="true"/>
			<fnc id="C" value="true"/>
			<fnc id="U" value="true"/>
			<fnc id="D" value="true"/>
			<fnc id="IS_LOGIN" value="true"/>
		</join>
		<join url="/view/profile.*" type="new">
			<fnc id="R" value="true"/>
			<fnc id="C" value="true"/>
			<fnc id="U" value="true"/>
			<fnc id="D" value="true"/>
			<fnc id="IS_LOGIN" value="true"/>
		</join>
		<join url="/ajax/.*" type="new">
			<fnc id="R" value="true"/>
			<fnc id="C" value="true"/>
			<fnc id="U" value="true"/>
			<fnc id="D" value="true"/>
			<fnc id="IS_LOGIN" value="true"/>
		</join>
	</role>
	
</roles>